<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="lemon_number_edittext_text">
        <item name="android:textColor">@color/lemon_number_edittext_color_text</item>
        <item name="android:textSize">@dimen/number_edittext_textsize</item>
        <item name="android:background">@drawable/lemon_number_edittext_textbg</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>
</resources>
